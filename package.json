{
  "name": "claude-agent-monitor",
  "version": "1.0.0",
  "description": "Visual GUI to monitor and manage Claude Code background agents",
  "main": "./out/main/index.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder --win --config",
    "package:dir": "electron-builder --win --dir --config"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "date-fns": "^3.2.0",
    "electron-store": "^8.1.0",
    "gray-matter": "^4.0.3",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.1.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "lucide-react": "^0.303.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^1.8.10",
    "@types/react-window": "^1.8.8",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.claude.agent-monitor",
    "productName": "Claude Agent Monitor",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ]
  }
}
